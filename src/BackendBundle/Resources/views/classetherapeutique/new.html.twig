{%  extends "template.html.twig" %}

{% block title %} Nouvelle Classe {% endblock %}

{% block body_content %}
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                {{ form_errors(form) }}
                <div class="header">
                    <h2>
                        Formulaire de cr√©ation d'une classe
                    </h2>
                    <ul class="header-dropdown m-r--5">
                        <li class="dropdown">
                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="material-icons">more_vert</i>
                            </a>
                            <ul class="dropdown-menu pull-right">
                                <li><a href="javascript:void(0);" class=" waves-effect waves-block">Accueil</a></li>
                                <li><a href="{{ path('classetherapeutique_index') }}" class=" waves-effect waves-block">Liste des classes</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="body">
                    {{ form_start(form) }}
                    <div class="form-group">
                        <div class="form-line">
                            {{ form_widget(form.libelle, {attr : {class : 'form-control', placeholder:'Saisir le libelle de la classe'}}) }}
                            {{ form_errors(form.libelle) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-line">
                            {{ form_row(form.description, {attr : {class : 'form-control', placeholder:'Saisir la description'}}) }}
                            {{ form_errors(form.description) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-line">
                            {{ form_row(form.pharmacie, {attr : {class : 'form-control', placeholder:'Saisir la description'}}) }}
                            {{ form_errors(form.pharmacie) }}
                        </div>
                    </div>


                    <br>
                    <input type="submit" value="Create" class="btn btn-primary m-t-15 waves-effect"/>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
