{% extends 'base.html.twig' %}

{% block body %}
    <h1>Imageart</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ imageArt.id }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ imageArt.url }}</td>
            </tr>
            <tr>
                <th>Alt</th>
                <td>{{ imageArt.alt }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('imageart_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('imageart_edit', { 'id': imageArt.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
