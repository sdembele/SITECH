{%  extends "template.html.twig" %}

{% block title %} Nouvelle Pharmacie {% endblock %}

{% block body_content %}
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                {{ form_errors(form) }}
                <div class="header">
                    <h2>
                        Formulaire de cr√©ation d'une pharmacie
                    </h2>
                    <ul class="header-dropdown m-r--5">
                        <li class="dropdown">
                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="material-icons">more_vert</i>
                            </a>
                            <ul class="dropdown-menu pull-right">
                                <li><a href="javascript:void(0);" class=" waves-effect waves-block">Accueil</a></li>
                                <li><a href="{{ path('pharmacies') }}" class=" waves-effect waves-block">Liste des pharmacies</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="body">
                    {{ form_start(form) }}
                    <div class="form-group">
                        <div class="form-line">
                            {{ form_widget(form.nom, {attr : {class : 'form-control', placeholder:'Saisir le nom de la pharmacie'}}) }}
                            {{ form_errors(form.nom) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-line">
                            {{ form_row(form.adresse1, {attr : {class : 'form-control', placeholder:'Saisir le nom de la pharmacie'}}) }}
                            {{ form_errors(form.adresse1) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-line">
                            {{ form_row(form.adresse2, {attr : {class : 'form-control', placeholder:'Saisir le nom de la pharmacie'}}) }}
                            {{ form_errors(form.adresse2) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-line">
                            {{ form_row(form.email, {attr : {class : 'form-control', placeholder:'Saisir le nom de la pharmacie'}}) }}
                            {{ form_errors(form.email) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-line">
                            {{ form_row(form.telephone, {attr : {class : 'form-control', placeholder:'Saisir le nom de la pharmacie'}}) }}
                            {{ form_errors(form.telephone) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-line">
                            {{ form_row(form.fax, {attr : {class : 'form-control', placeholder:'Saisir le nom de la pharmacie'}}) }}
                            {{ form_errors(form.fax) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-line">
                            {{ form_row(form.bp, {attr : {class : 'form-control', placeholder:'Saisir le nom de la pharmacie'}}) }}
                            {{ form_errors(form.bp) }}
                        </div>
                    </div>


                    <br>
                    {{ form_label(form.supprimer, "Titre de l'annonce", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                    {{ form_widget(form.supprimer, {attr: {class:'btn btn-danger m-t-15 waves-effect'}}) }}

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}